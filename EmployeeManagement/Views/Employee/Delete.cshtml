@{
}
@model Employee

<style>
    /* Full-page background */
    body {
        background-image: url("https://my.alfred.edu/zoom/_images/foster-lake.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    /* Form container */
    .form-container {
        max-width: 500px;
        margin: 50px auto;
        background-color: blue; /* Semi-transparent red background for delete confirmation */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    /* Page header */
    h1 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        color: #ffcccb; /* Light red for emphasis */
    }

    /* Styling form fields */
    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        box-sizing: border-box;
        background-color: #f8f8f8;
        color: #333;
    }

        input:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }

    /* Danger button styling */
    .btn-danger {
        background-color: green;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
    }

        .btn-danger:hover {
            background-color: darkred;
        }

    /* Warning text */
    .warning-text {
        text-align: center;
        color: #ffcccb;
        font-size: 14px;
        margin-bottom: 20px;
    }
</style>


<div class="form-container">
        <h1>Delete Employee</h1>
        <p class="warning-text">Are you sure you want to delete this employee? This action cannot be undone.</p>
        <form method="post" asp-action="Delete">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Gender">Gender</label>
                <input asp-for="Gender" class="form-control" disabled />
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
</div>
